@using Logic.Model
@using StudentRegistration.WebApp.Models
@model Logic.Model.Student
    
<h2>Create Student</h2>

<div class="row">
    <form asp-controller="Student" asp-action="Create" method="post" class="form-horizontal">
      
        <div class="form-group">
            <label asp-for="Name" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Email" class="control-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        
        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-controller="Student" asp-action="Index" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
    
</div>