@model StudentRegistration.WebApp.Models.SearchViewModel
<h2>Search Students</h2>

<div class="row">
	<form asp-controller="Student" asp-action="Search" method="post" class="form-horizontal">

		<div class="form-group">
			<label asp-for="Query" class="control-label col-sm-2"></label>
			<div class="col-sm-10">
				<input asp-for="Query" class="form-control" />
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<a asp-controller="Student" asp-action="Index" class="btn btn-default">Back</a>
				<button type="submit" class="btn btn-primary">Search</button>
			</div>
		</div>
	</form>

</div>


<div class="row">
	<table class="table">
		<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var item in Model.Students)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Email</td>
			</tr>
		}
            
		@if (!Model.Students.Any())
		{
			<tr>
				<td colspan="2">No students found</td>
			</tr>
		}
		</tbody>
	</table>
</div>

<div>
    <h3>@ViewBag.Environment</h3>
</div>